<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RulePackDef>
    <defName>Transition_Include</defName>
    <rulePack>
      <rulesStrings>
        <li>duetoa->due to</li>
        <li>duetoa(p=0.5)->because of</li>
        <li>duetoa(p=0.5)->thanks to</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
      
  <RulePackDef>
    <defName>Transition_Downed</defName>
    <include>
      <li>Transition_Include</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>logentry->[culpritHediff_labelNoun] caused [subject_nameShortDef] to [collapsemeta].</li>
        <li>logentry->[culpritHediff_labelNoun] in the [culpritHediff_target_label] caused [subject_nameShortDef] to [collapsemeta].</li>

        <li>logentry->[subject_nameShortDef] [collapsedmeta] [duetoa] [culpritHediff_labelNoun].</li>
        <li>logentry->[subject_nameShortDef] [collapsedmeta] [duetoa] [culpritHediff_labelNoun] in the [culpritHediff_target_label].</li>
        <li>logentry->[subject_nameShortDef] [collapsedmeta] [duetoa] [culpritHediff_labelNoun] in [subject_possessive] [culpritHediff_target_label].</li>

        <li>logentry(p=0.1)->[subject_nameShortDef] [collapsedmeta].</li>

        <li>collapse->collapse</li>
        <li>collapse->crumple</li>
        <li>collapse->drop</li>
        <li>collapse->faint</li>
        
        <li>collapsed->collapsed</li>
        <li>collapsed->crumpled</li>
        <li>collapsed->dropped</li>
        <li>collapsed->fainted</li>

        <li>helplessly->helplessly</li>
        <li>helplessly->unconscious</li>
        <li>helplessly->in exhaustion</li>
        <li>helplessly->weakly</li>
        <li>helplessly->feebly</li>

        <li>collapsemeta->[collapse]</li>
        <li>collapsemeta(p=0.5)->[collapse] [helplessly]</li>

        <li>collapsedmeta->[collapsed]</li>
        <li>collapsedmeta(p=0.5)->[collapsed] [helplessly]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Transition_DiedInclude</defName>
    <include>
      <li>Transition_Include</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>logentry(p=1.5)->[culpritHediff_labelNoun] caused [subject_nameShortDef] to [die].</li>
        <li>logentry(p=1.5)->[culpritHediff_labelNoun] in the [culpritHediff_target_label] caused [subject_nameShortDef] to [die].</li>

        <li>logentry->[subject_nameShortDef] [died] [duetoa] [culpritHediff_labelNoun] [flavorsuffix].</li>
        <li>logentry->[subject_nameShortDef] [died] [duetoa] [culpritHediff_labelNoun] in the [culpritHediff_target_label] [flavorsuffix].</li>
        <li>logentry->[subject_nameShortDef] [died] [duetoa] [culpritHediff_labelNoun] in [subject_possessive] [culpritHediff_target_label] [flavorsuffix].</li>

        <li>logentry(p=0.1)->[subject_nameShortDef] [died] [suffixflavor].</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Transition_Died</defName>
    <include>
      <li>Transition_DiedInclude</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>die(p=2)->die</li>
        <li>die->perish</li>
        <li>die->expire</li>
        <li>die(p=0.5)->give in to [subject_possessive] wounds</li>

        <li>died(p=2)->died</li>
        <li>died->perished</li>
        <li>died->expired</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Transition_DiedExplosive</defName>
    <include>
      <li>Transition_DiedInclude</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>die(p=3)->explode [flavor]</li>
        <li>die(p=3)->explode [flavorsuffix]</li>
        <li>die->detonate [flavor]</li>
        <li>die->detonate [flavorsuffix]</li>
        <li>die->burst [flavor]</li>
        <li>die->burst [flavorsuffix]</li>
        
        <li>died(p=3)->exploded [flavor]</li>
        <li>died->detonated [flavor]</li>
        <li>died->burst [flavor]</li>

        <li>flavor(p=0.2)->in a chemical [fireball]</li>
        <li>flavor->in a [color] [fireball]</li>
        <li>flavor->in a [large] [fireball]</li>
        <li>flavor(p=4)->in a [fireball]</li>
        <li>flavor(p=4)-></li>

        <li>flavorsuffix->, scattering [pieces] [everywhere]</li>
        <li>flavorsuffix(p=2)->, scattering [gore] [everywhere]</li>
        <li>flavorsuffix->, leaving a small pile of [gore]</li>
        <li>flavorsuffix->, leaving a small crater</li>
        <li>flavorsuffix(p=4)-></li>

        <li>fireball(p=3)->fireball</li>
        <li>fireball->flameball</li>
        <li>fireball->shockwave</li>
        <li>fireball->conflagration</li>

        <li>pieces->pieces</li>
        <li>pieces->fragments</li>

        <li>everywhere->everywhere</li>
        <li>everywhere->far and wide</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
</Defs>
